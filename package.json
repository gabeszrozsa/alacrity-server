{
  "name": "alacrity",
  "version": "1.0.0",
  "description": "",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
	  "build": "npm run server-build && npm run client-build",
    "server-start": "ts-node src/server.ts",
    "server-dev": "node ./node_modules/nodemon/bin/nodemon.js",
    "server-build": "tsc",
    "server-prod": "npm run build && npm run start",
    "server-test": "mocha --exit --require ts-node/register test/**/*.ts",
    "client-start": "cd client && npm start",
	  "client-build": "cd client && npm run build",
    "postinstall": "npm run build",
    "dev": "concurrently --kill-others-on-fail \"npm run server-dev\" \"npm run client-start\"",
    "prod": "concurrently --kill-others-on-fail \"npm run server-start\" \"npm run client-start\""
  },
  "engines": {
    "node": "8.11.4"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.5",
    "chai": "^4.2.0",
    "concurrently": "^4.0.1",
    "mocha": "^5.2.0",
    "supertest": "^3.3.0",
    "ts-node": "^7.0.1",
    "typescript": "^3.0.3"
  },
  "dependencies": {
    "@types/es6-promise": "^3.3.0",
    "@types/express": "^4.16.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "cors": "^2.8.4",
    "express": "^4.16.3",
    "jsonwebtoken": "^8.3.0",
    "mongoose": "^5.2.14",
    "nodemon": "^1.18.4",
    "validator": "^10.8.0"
  }
}
